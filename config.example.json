{
    "database": {
        "uri": "sqlite:./data/db.sqlite3"
    },
    "mqtt": {
        "brokerUrl": "mqtt://example.com",
        "notifications": {
            "privateTopic": "portier/private/notifications",
            "publicTopic": "portier/public/notifications"
        }
    },
    "oauth2": {
        "baseUrl": "https://example.com",
        "resourceOwnerPath": "/user",
        "tokenInfoPath": "/token-info"
    },
    "actionLogger": {
        "createLogs": true
    },
    "doors": {
        "example_door": {
            "name": {
                "en": "Example Door",
                "bg": "Примерна Врата"
            },
            "number": 1,
            "controller": {
                "type": "dummy"
            },
            "actions": {
                "open": {
                    "roles": ["board_member", "trusted_member"]
                }
            }
        },
        "example_door_2": {
            "name": {
                "en": "Example Door 2",
                "bg": "Примерна Врата 2"
            },
            "number": 2,
            "controller": {
                "type": "mqtt",
                "options": {
                    "actions": {
                        "open": {
                            "topic": "example/123",
                            "value": "1"
                        },
                        "unlock": {
                            "topic": "example/456",
                            "value": "1"
                        },
                        "lock": {
                            "topic": "example/789",
                            "value": "1"
                        }
                    }
                }
            },
            "actions": {
                "open": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                },
                "unlock": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                },
                "lock": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                }
            }
        }
    }
}
