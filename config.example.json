{
    "database": {
        "uri": "sqlite:./data/db.sqlite3"
    },
    "mqtt": {
        "brokerUrl": "mqtt://example.com",
        "notifications": {
            "privateTopic": "portier/private/notifications",
            "publicTopic": "portier/public/notifications"
        }
    },
    "passport": {
        "authority": "https://YOUR_ZITADEL_INSTANCE_NAME.zitadel.cloud",
        "authorization": {
            "type": "jwt-profile",
            "profile": {
                "type": "application",
                "keyId": "key id",
                "key": "private rsa key",
                "appId": "app id",
                "clientId": "client id"
            }
        }
    },
    "actionLogger": {
        "createLogs": true,
        "readLogs": {
            "roles": ["board_member"],
            "usernames": ["example"]
        }
    },
    "devices": {
        "example_door": {
            "name": {
                "en": "Example Door",
                "bg": "Примерна Врата"
            },
            "type": "door",
            "number": 1,
            "controller": {
                "type": "dummy"
            },
            "actions": {
                "open": {
                    "roles": ["board_member", "trusted_member"]
                }
            }
        },
        "example_door_2": {
            "name": {
                "en": "Example Door 2",
                "bg": "Примерна Врата 2"
            },
            "type": "door",
            "number": 2,
            "public": true,
            "controller": {
                "type": "mqtt",
                "options": {
                    "actions": {
                        "open": {
                            "topic": "example/123",
                            "value": "1"
                        },
                        "unlock": {
                            "topic": "example/456",
                            "value": "1"
                        },
                        "lock": {
                            "topic": "example/789",
                            "value": "1"
                        }
                    }
                }
            },
            "actions": {
                "open": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                },
                "unlock": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                },
                "lock": {
                    "roles": ["board_member", "trusted_member", "landlord", "tenant"]
                }
            }
        }
    }
}
